  <%= f.input :follow_up %>
  <%= f.input :clicked_link_date %>
  <%= f.input :pdf_url %>
  <%= f.input :message_sent %>
  <%= f.input :last_message_name %>
  <%= f.input :last_send_date %>
  <%= f.input :remove_date %>
  <%= f.input :remove_user %>
  <%= f.input :order_id %>
  <%= f.input :patient_name %>
  <%= f.input :tickect_id %>
  <%= f.input :created_on %>
  <%= f.input :issue_asset %>
