<div id="setting-smtp-api" class="invisible row-fluid  well" style="padding: 24px 35px 2px 14px !important; width:809px;">
  <%= simple_form_for @smtp_setting,:url=>smtp_setting_path(@smtp_setting), :html => { :class => 'form-horizontal' } do |f| %>
      <a id="close-smtp-form" class="icon-remove pull-right"></a>
      <%= f.input :address %>
      <%= f.input :port %>
      <%= f.input :domain %>
      <%= f.input :user_name %>
      <%= f.input :password %>
      <%= f.input :authentication %>
      <%= f.input :enable_starttls_auto %>
      <div class="form-actions">
        <%= f.button :submit,"Update SMTP Settings", :class => 'btn-primary' %>
      </div>
  <% end %>

</div>

